{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(tabs)/_layout.jsx",
    "app/(tabs)/bookmark.jsx",
    "app/(tabs)/create.jsx",
    "app/(tabs)/home.jsx",
    "app/_layout.jsx",
    "app/index.jsx",
    "app/profile.jsx",
    "app/(auth)/_layout.jsx",
    "app/(auth)/signin.jsx",
    "app/(auth)/signup.jsx",
    "app/search/[query].jsx"
  ]
}
